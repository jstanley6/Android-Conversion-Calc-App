<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.jasonstanl3y.helloworld.MainActivity">


            <Button
                android:id="@+id/btnPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray"
                android:onClick="btnNumberOnClick"
                android:text="."
                app:layout_constraintStart_toStartOf="@+id/btn1"
                app:layout_constraintTop_toBottomOf="@+id/btn1" />

            <Button
                android:id="@+id/btnEquals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:onClick="btnEqualsOnClick"
                android:text="="
                android:background="@android:color/darker_gray"
                app:layout_constraintBaseline_toBaselineOf="@+id/btnPeriod"
                app:layout_constraintStart_toEndOf="@+id/btn0" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="78dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:background="@android:color/holo_green_dark"
                android:onClick="btnOperationOnClick"
                android:text="+"
                app:layout_constraintBaseline_toBaselineOf="@+id/btnPeriod"
                app:layout_constraintStart_toEndOf="@+id/btnEquals" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="78dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:background="@android:color/holo_green_dark"
                android:onClick="btnOperationOnClick"
                android:text="-"
                app:layout_constraintBaseline_toBaselineOf="@+id/btn1"
                app:layout_constraintStart_toEndOf="@+id/btn3" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="78dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:onClick="btnOperationOnClick"
                android:text="*"
                android:background="@android:color/holo_green_dark"
                app:layout_constraintBaseline_toBaselineOf="@+id/btn4"
                app:layout_constraintStart_toEndOf="@+id/btn6" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:onClick="btnNumberOnClick"
                android:text="9"
                android:background="@android:color/darker_gray"
                app:layout_constraintBaseline_toBaselineOf="@+id/btn7"
                app:layout_constraintStart_toEndOf="@+id/btn8" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_marginStart="8dp"
                android:onClick="btnNumberOnClick"
                android:text="8"
                android:background="@android:color/darker_gray"
                app:layout_constraintBaseline_toBaselineOf="@+id/btn7"
                app:layout_constraintStart_toEndOf="@+id/btn7" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray"
                android:onClick="btnNumberOnClick"
                android:text="7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewResult" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:onClick="btnNumberOnClick"
                android:text="6"
                android:background="@android:color/darker_gray"
                app:layout_constraintBaseline_toBaselineOf="@+id/btn4"
                app:layout_constraintStart_toEndOf="@+id/btn5" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:onClick="btnNumberOnClick"
                android:text="5"
                android:background="@android:color/darker_gray"
                app:layout_constraintBaseline_toBaselineOf="@+id/btn4"
                app:layout_constraintStart_toEndOf="@+id/btn4" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray"
                android:onClick="btnNumberOnClick"
                android:text="4"
                app:layout_constraintStart_toStartOf="@+id/btn7"
                app:layout_constraintTop_toBottomOf="@+id/btn7" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:onClick="btnNumberOnClick"
                android:text="3"
                android:background="@android:color/darker_gray"
                app:layout_constraintBaseline_toBaselineOf="@+id/btn1"
                app:layout_constraintStart_toEndOf="@+id/btn2" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:onClick="btnNumberOnClick"
                android:text="2"
                android:background="@android:color/darker_gray"
                app:layout_constraintBaseline_toBaselineOf="@+id/btn1"
                app:layout_constraintStart_toEndOf="@+id/btn1" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray"
                android:onClick="btnNumberOnClick"
                android:text="1"
                app:layout_constraintStart_toStartOf="@+id/btn4"
                app:layout_constraintTop_toBottomOf="@+id/btn4" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@android:color/darker_gray"
                android:onClick="btnNumberOnClick"
                android:text="0"
                app:layout_constraintBaseline_toBaselineOf="@+id/btnPeriod"
                app:layout_constraintStart_toEndOf="@+id/btnPeriod" />

            <EditText
                android:id="@+id/edtResultFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="numberDecimal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="78dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:onClick="btnOperationOnClick"
                android:text="/"
                android:background="@android:color/holo_green_dark"
                app:layout_constraintBaseline_toBaselineOf="@+id/btn7"
                app:layout_constraintStart_toEndOf="@+id/btn9" />

            <Button
                android:id="@+id/btnRand"
                android:layout_width="78dp"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/holo_red_light"
                android:onClick="btnClearOnClick"
                android:text="@string/clear"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btnPlus"
                app:layout_constraintTop_toBottomOf="@+id/btnPlus" />

            <TextView
                android:id="@+id/viewResult"
                android:layout_width="97dp"
                android:layout_height="22dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="00"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtResultFrom" />

            <Button
                android:id="@+id/btnGoToConversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:onClick="btnConversionOnClick"
                android:text="@string/btnTitleConversions"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnRand" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
