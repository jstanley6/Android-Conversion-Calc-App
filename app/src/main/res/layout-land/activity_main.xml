<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jasonstanl3y.helloworld.MainActivity">


    <Button
        android:id="@+id/btnBack"
        android:layout_width="78dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/holo_red_light"
        android:onClick="btnBackSpace"
        android:text="⌫"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnClear2"
        app:layout_constraintStart_toEndOf="@+id/btnClear2" />

    <Button
        android:id="@+id/btnTan"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="operationTanOnClick"
        android:text="TAN"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn0"
        app:layout_constraintStart_toEndOf="@+id/btnPlus" />

    <Button
        android:id="@+id/btnSin"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="operationSinOnClick"
        android:text="SIN"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnMinus"
        app:layout_constraintStart_toEndOf="@+id/btnMinus" />

    <Button
        android:id="@+id/btnPosNeg"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="btnNegAndPos"
        android:text="±"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn0"
        app:layout_constraintStart_toEndOf="@+id/btnTan" />

    <Button
        android:id="@+id/btnSquared"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="btnSquaredOnClick"
        android:text="x²"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnSin"
        app:layout_constraintStart_toEndOf="@+id/btnSin" />

    <Button
        android:id="@+id/btnPi"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="btnPi"
        android:text="\u03C0"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnCos"
        app:layout_constraintStart_toEndOf="@+id/btnCos" />

    <Button
        android:id="@+id/btnCos"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="operationCosOnClick"
        android:text="COS"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnMultiply"
        app:layout_constraintStart_toEndOf="@+id/btnMultiply" />

    <Button
        android:id="@+id/btnCheck"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="getSqrRootOnClick"
        android:text="✓"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnPercentage"
        app:layout_constraintStart_toEndOf="@+id/btnPercentage" />

    <Button
        android:id="@+id/btnPercentage"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="btnPercent"
        android:text="%"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnDivide"
        app:layout_constraintStart_toEndOf="@+id/btnDivide" />

    <Button
        android:id="@+id/btnPeriod"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/darker_gray"
        android:onClick="btnNumberOnClick"
        android:text="."
        app:layout_constraintBaseline_toBaselineOf="@+id/btn0"
        app:layout_constraintStart_toEndOf="@+id/btn0" />

    <Button
        android:id="@+id/btnEquals"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/darker_gray"
        android:onClick="btnEqualsOnClick"
        android:text="="
        app:layout_constraintBaseline_toBaselineOf="@+id/btn0"
        app:layout_constraintStart_toEndOf="@+id/btnPeriod" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/darker_gray"
        android:onClick="btnOperationOnClick"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn0"
        app:layout_constraintStart_toEndOf="@+id/btnEquals" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:onClick="btnOperationOnClick"
        android:text="-"
        android:background="@android:color/darker_gray"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn1"
        app:layout_constraintStart_toEndOf="@+id/btn3" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:onClick="btnOperationOnClick"
        android:text="*"
        android:background="@android:color/darker_gray"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn4"
        app:layout_constraintStart_toEndOf="@+id/btn6" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/darker_gray"
        android:onClick="btnNumberOnClick"
        android:text="9"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn7"
        app:layout_constraintStart_toEndOf="@+id/btn8" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/darker_gray"
        android:onClick="btnNumberOnClick"
        android:text="8"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn7"
        app:layout_constraintStart_toEndOf="@+id/btn7" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="100dp"
        android:background="@android:color/darker_gray"
        android:onClick="btnNumberOnClick"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewResult" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/darker_gray"
        android:onClick="btnNumberOnClick"
        android:text="6"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn4"
        app:layout_constraintStart_toEndOf="@+id/btn5" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/darker_gray"
        android:onClick="btnNumberOnClick"
        android:text="5"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn4"
        app:layout_constraintStart_toEndOf="@+id/btn4" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        android:onClick="btnNumberOnClick"
        android:text="4"
        app:layout_constraintStart_toStartOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/darker_gray"
        android:onClick="btnNumberOnClick"
        android:text="3"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn1"
        app:layout_constraintStart_toEndOf="@+id/btn2" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/darker_gray"
        android:onClick="btnNumberOnClick"
        android:text="2"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn1"
        app:layout_constraintStart_toEndOf="@+id/btn1" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        android:onClick="btnNumberOnClick"
        android:text="1"
        app:layout_constraintStart_toStartOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        android:onClick="btnNumberOnClick"
        android:text="0"
        app:layout_constraintStart_toStartOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <EditText
        android:id="@+id/edtResultFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/darker_gray"
        android:onClick="btnOperationOnClick"
        android:text="/"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn7"
        app:layout_constraintStart_toEndOf="@+id/btn9" />

    <Button
        android:id="@+id/btnRand"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="btnRand"
        android:text="RAND"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnClear2"
        app:layout_constraintStart_toEndOf="@+id/btnBack" />

    <Button
        android:id="@+id/btnClear2"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_red_light"
        android:onClick="btnClearOnClick"
        android:text="C"
        app:layout_constraintStart_toStartOf="@+id/btnPlus"
        app:layout_constraintTop_toBottomOf="@+id/btnPlus" />

    <TextView
        android:id="@+id/viewResult"
        android:layout_width="97dp"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtResultFrom" />

</android.support.constraint.ConstraintLayout>
